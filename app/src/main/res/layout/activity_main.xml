<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/teclado"
    android:scrollbarSize="10dp"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:onClick="operaciones"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultCal">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/siete"
                android:layout_width="95dp"
                android:layout_height="138dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:backgroundTint="@color/teclado"
                android:onClick="pres_digitos"
                android:text="7"
                android:textSize="34sp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/ocho"
                android:layout_width="95dp"
                android:layout_height="138dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:backgroundTint="@color/teclado"
                android:onClick="pres_digitos"
                android:text="8"
                android:textSize="34sp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/nueve"
                android:layout_width="95dp"
                android:layout_height="138dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:backgroundTint="@color/teclado"
                android:onClick="pres_digitos"
                android:text="9"
                android:textSize="34sp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/suma"
                android:layout_width="90dp"
                android:layout_height="138dp"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="0dp"
                android:backgroundTint="@color/teclado"
                android:onClick="operaciones"
                android:text="+"
                android:textSize="34sp"
                app:cornerRadius="0dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/cuatro"
                android:layout_width="95dp"
                android:layout_height="138dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:backgroundTint="@color/teclado"
                android:onClick="pres_digitos"
                android:text="4"
                android:textSize="34sp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/cinco"
                android:layout_width="95dp"
                android:layout_height="138dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:backgroundTint="@color/teclado"
                android:onClick="pres_digitos"
                android:text="5"
                android:textSize="34sp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/seis"
                android:layout_width="95dp"
                android:layout_height="138dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:backgroundTint="@color/teclado"
                android:onClick="pres_digitos"
                android:text="6"
                android:textSize="34sp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/resta"
                android:layout_width="90dp"
                android:layout_height="138dp"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="0dp"
                android:backgroundTint="@color/teclado"
                android:onClick="operaciones"
                android:text="-"
                android:textSize="34sp"
                app:cornerRadius="0dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/uno"
                android:layout_width="95dp"
                android:layout_height="138dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:backgroundTint="@color/teclado"
                android:onClick="pres_digitos"
                android:text="1"
                android:textSize="34dp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/dos"
                android:layout_width="95dp"
                android:layout_height="138dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:backgroundTint="@color/teclado"
                android:onClick="pres_digitos"
                android:text="2"
                android:textSize="34dp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/tres"
                android:layout_width="95dp"
                android:layout_height="138dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:backgroundTint="@color/teclado"
                android:onClick="pres_digitos"
                android:text="3"
                android:textSize="34dp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/multiplicacion"
                android:layout_width="90dp"
                android:layout_height="138dp"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="0dp"
                android:backgroundTint="@color/teclado"
                android:onClick="operaciones"
                android:text="*"
                android:textSize="34dp"
                app:cornerRadius="0dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/punto"
                android:layout_width="95dp"
                android:layout_height="138dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="1dp"
                android:backgroundTint="@color/teclado"
                android:onClick="pres_digitos"
                android:text="."
                android:textSize="34dp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/cero"
                android:layout_width="95dp"
                android:layout_height="138dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="1dp"
                android:backgroundTint="@color/teclado"
                android:onClick="pres_digitos"
                android:text="0"
                android:textSize="34dp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/igual"
                android:layout_width="95dp"
                android:layout_height="138dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:backgroundTint="@color/teclado"
                android:text="="
                android:textSize="34dp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/division"
                android:layout_width="90dp"
                android:layout_height="138dp"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="0dp"
                android:backgroundTint="@color/teclado"
                android:onClick="operaciones"
                android:text="/"
                android:textSize="34dp"
                app:cornerRadius="0dp" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_margin="0dp"
        android:layout_marginBottom="10dp"
        android:background="@color/teclado"
        android:text="Mi calculadora"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/resultCal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resultCal"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="10dp"
        android:hint="0"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <View
        android:id="@+id/divider"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/holo_orange_dark"
        app:layout_constraintTop_toBottomOf="@+id/resultCal"
        tools:layout_editor_absoluteX="1dp" />
</androidx.constraintlayout.widget.ConstraintLayout>